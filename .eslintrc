{
  "extends": [
    "airbnb"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6
  },
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "comma-dangle": [
      "error",
      "only-multiline"
    ],
    "no-underscore-dangle": 0,
    "max-len": [
      1,
      180,
      4
    ],
    "arrow-body-style": [
      0
    ],
    "react/jsx-no-bind": [
      0
    ],
    "import/no-unresolved": [
      0
    ],
    // Until import plugin supports webpack 2 resolveModules
    "no-console": "off",
    "arrow-parens": ["error", "as-needed"],
    "no-trailing-spaces": ["error", { "skipBlankLines": true }],
    "react/prop-types": 0
  }
}
